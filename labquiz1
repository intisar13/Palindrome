public static void main(String[]args) {
	Scanner sc= new Scanner(System.in);
	System.out.println("Enter x: ");
	int x= sc.nextInt();
	System.out.println("Enter y: ");
	int y= sc.nextInt();
	sc.close();
	power(x,y);
}
	
	
	
	
	public static void power(int a, int b) {
		long result=1;
		while(b!=0) {
			result*=a;
			b--;
			
				
		}
		System.out.println("Answer: "+result);
		
	
		}
	
}
